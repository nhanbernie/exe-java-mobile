<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A1A1A"
                android:endColor="#333333"
                android:angle="90" />
            <corners android:radius="28dp" />
            <stroke
                android:width="2dp"
                android:color="#4A5568" />
        </shape>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2D3748"
                android:endColor="#1A202C"
                android:angle="90" />
            <corners android:radius="28dp" />
            <stroke
                android:width="2dp"
                android:color="#667EEA" />
        </shape>
    </item>

    <!-- Normal State -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#000000"
                android:endColor="#2D3748"
                android:angle="90" />
            <corners android:radius="28dp" />
            <stroke
                android:width="1dp"
                android:color="#4A5568" />
        </shape>
    </item>

</selector>